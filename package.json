{
	"name": "nlw-node",
	"version": "1.0.0",
	"main": "src/server.ts",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev src/server.ts"
	},
	"dependencies": {
		"express": "^4.17.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/node": "^14.14.31",
		"husky": "^5.1.1",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.2.2"
	},
	"lint-staged": {
		"*.{js,ts,json,scss,css,md,html,tsx,jsx}": [
			"prettier --write ."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "echo \"———› START Prettier ‹———\" && lint-staged && git add . && echo \"———› Prettier ✅ ‹——— \""
		}
	}
}