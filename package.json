{
	"name": "nlw-node",
	"version": "1.0.0",
	"main": "src/server.ts",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
		"typeorm": "ts-node-dev node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"reflect-metadata": "^0.1.13",
		"sqlite3": "^5.0.2",
		"typeorm": "^0.2.31"
	},
	"devDependencies": {
		"@types/express": "^4.17.11",
		"@types/node": "^14.14.31",
		"husky": "^5.1.1",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.2.2"
	},
	"lint-staged": {
		"*.{js,ts,json,scss,css,md,html,tsx,jsx}": [
			"prettier --write ."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "echo \"———› START Prettier ‹———\" && lint-staged && git add . && echo \"———› Prettier ✅ ‹——— \""
		}
	}
}
